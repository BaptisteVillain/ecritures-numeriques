 {% extends "base.twig" %}

{% block content %}
	{% include "partials/background-lines.twig" %}
  <div class="publications">
    <header class="publications__header">
      <button class="header__nav header__nav--prev header__nav--disable">
        <
      </button>
      <div class="header__wrapper">
