            <button class="{{term.slug == item.slug ? 'item--active' : ''}}" data-slug="{{item.slug}}" data-taxonomy="{{item.taxonomy}}" data-index="{{index + 1}}">
            {{ item.name }}
            </button>
          </li>
        {% endfor %}
        </ul>
      </div>
      <button class="header__nav header__nav--next">
        >
      </button>
    </header>
    <div class="publications__loading card--hide">
      {{__('loading...', 'ecritures-numeriques')}}
    </div>
    <div class="publications__posts">
      {% include './partials/publications-content.twig' %}
    </div>
  </div>
{% endblock %}
