{% for post in posts %}
  {% if loop.index == 1 %}
    <!-- First major block -->
    <div class="publications__top-block">
      <div class="top-block__wrapper">
        <div class="top-block__first">
          <h2 class="publications__author">Marcello Vitali-Rosati</h2>
          <h1 class="publications__title top-block__first__title">{{post.title}}</h1>
          <div class="publications__credits">
            <h3 class="publications__credits__domain">{{post.custom.domain}}</h3>
            -
            <span class="publications__credits__date">[15 Dec 2017]</span>
          </div>
          <p class="publications__content">
            {{post.custom.content}}
          </p>

          {% if post.terms is not empty %}
            {% include 'components/single-tags.twig' with {'tags': post.terms} %}
          {% endif %}
        </div>

      {% elseif loop.index == 2 %}
        <div class="top-block__second">
          <div class="top-block__second__top">
            <h2 class="publications__author">Marcello Vitali-Rosati</h2>
