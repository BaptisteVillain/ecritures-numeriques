{% extends "base.twig" %}

{% block content %}

  <section class="event">
    <!-- Header event -->
    <div class="event__container">
      <header class="single__header__wrapper">
        <a href="#" class="header__project__back single__header__previous">< {{__('retour')}}</a>
      </header>

      <!-- Event content -->
      <div class="event__wrapper">
        <div class="event__cover_image">
          <img src="{{event.custom.image_url}}" alt="{{event.title}}">
        </div>
        <div class="event__infos__wrapper">
          <ul>
            <li class="event__infos">
              <div class="infos__left">
                <h2 class="infos__date">
                  {{event.date_start|date('d m')}}</h2>
              </div>
              <div class="infos__right">
                <h1 class="infos__title">{{event.post_name}}</h1>
              </div>
            </li>
            <li class="event__infos">
              <div class="infos__left">
                <h4 class="infos__hour">{{event.date_start|date('H:i')}}</h4>
              </div>
              <div class="infos__right">
                <h3 class="infos__location">
                  {{event.event_venue}}
                </h3>
              </div>
            </li>
          </ul>
          <div>
            {{event.post_content}}
            <h2>{{event.custom.medias_title}}</h2>
            {{event.custom.video_url}}
          </div>

        </div>
      </div>
    </div>

  </section>

{% endblock %}