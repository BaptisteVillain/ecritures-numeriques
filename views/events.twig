{% extends "base.twig" %}

{% block content %}
  {% include "partials/background-lines.twig" %}
  <div class="all_events">
    <section class="events__container upcoming__events">
      <div class="upcoming__events__wrapper">
        <header class="events__header">
          <h2 class="events__header__title">{{__('Upcoming events')}}</h2>
        </header>
        {% for event in events_highlight %}
          <a href="{{event.path}}" class="events__card events__card--highlight">
            <div class="events__card__img events__card__img--highlight">
              {% if event.cover_image is not empty %}
                <img src="{{TimberImage(event.cover_image).src}}" alt="{{event.title}}">
              {% endif %}
            </div>
            <div class="events__card__content events__card__content--highlight">
              <h2 class="events__card__date">{{ event.date_start|date('d F')}}
                -
                {{ event.date_end|date('d F')}}</h2>
              <h1 class="events__card__title">{{ event.title }}</h1>
              <p class="events__card__summary">{{ event.summary}}</p>
              <div class="events__card__infos">
                <h4>[
                  {{ event.date_start|date('H:i')}}
                  -
                  {{ event.date_end|date('H:i')}}
                  ]</h4>
                <h3>{{ event.event_venue}}</h3>
              </div>
            </div>
          </a>
        {% endfor %}
        {% for event in events %}
          {% if event.highlight_event != 1 %}
            <a href="{{event.path}}" class="events__card">
              <div class="events__card__img">
                {% if event.cover_image is not empty %}
                  <img src="{{TimberImage(event.cover_image).src}}" alt="{{event.title}}">
                {% endif %}
              </div>
              <div class="events__card__content">
                <h3 class="events__card__date">{{ event.date_start|date('d F')}}
                  -
                  {{ event.date_end|date('d F')}}</h3>
                <h1 class="events__card__title">{{ event.title }}</h1>
                <div class="events__card__infos">
                  <h4>[
                    {{ event.date_start|date('H:i')}}
                    -
                    {{ event.date_end|date('H:i')}}
                    ]</h4>
                  <h3>{{ event.event_venue}}</h3>
                </div>
              </div>
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </section>

    <section class="events__container past__events">
      <div class="past__events__wrapper">
        <header class="events__header">
          <h2 class="events__header__title">{{__('Past events')}}</h2>
        </header>
        {% for event in events_past %}
          <a href="{{event.path}}" class="events__card">
            <div class="events__card__date--left">
              <h2 class="events__card__date">{{ event.date_start|date('d F')}}
                -
                {{ event.date_end|date('d F')}}</h2>
              {% if event.date_start is not empty %}
                <h4>[
                  {{ event.date_start|date('H:i')}}
                  -
                  {{ event.date_end|date('H:i')}}
                  ]</h4>
              {% endif %}
            </div>
            <div class="events__card__content">
              <h1 class="events__card__title">{{ event.title }}</h1>
              <h3 class="events__card__venue">{{ event.event_venue}}</h3>
            </div>
          </a>
        {% endfor %}
      </div>
    </section>
  </div>
{% endblock %}