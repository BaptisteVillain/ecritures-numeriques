{% extends "base.twig" %}

{% block content %}
	<section class="home-section landing">
		<div class="landing__container">
			
		</div>
	</section>
	<section class="home-section events">
		<header class="section-header events__header">
			<h2 class="header__title">Événements à venir</h2>
			<a href="#" class="header__link"> voir tout > </a>
		</header>
		<div class="section-container events__container">
			{% for post in highlighted_event %}
				{% include 'partials/card-event-highlighted.twig' %}
			{% endfor %}
			{% for post in events %}	
				{% include 'partials/card-event.twig' %}
			{% endfor %}
		</div>
		<footer class="section-footer events__footer">
			<a href="#" class="footer__link"> voir tout > </a>
		</footer>
	</section>
	<section class="home-section projects">
		<div class="projects__container">
			<header class="section-header projects__header">
				<h2 class="header__title">Derniers projets</h2>
				<a href="#" class="header__link"> Découvrir tous les projets > </a>
			</header>
			{% for key, post in projects %}
				{% include 'partials/card-project.twig' %}			
			{% endfor %}
			<footer class="section-footer projects__footer">
				<a href="" class="footer__link">Découvrir tous les projets  ></a>
			</footer>
		</div>
	</section>
	<section class="home-section publications">
		<div class="publications__container">
			<header class="section-header publications__header">
				<h2 class="header__title">Dernières publications</h2>
				<a href="#" class="header__link">Consulter toutes les publications  ></a>
			</header>
			{% for key,post in publications[0:1] %}
			{% include 'partials/card-publication.twig' with {'content': true} %}				
			{% endfor %}
			<div class="publications__wrapper">
			{% for post in publications[1:] %}
				{% include 'partials/card-publication.twig' with {'content': false} %}				
			{% endfor %}
			</div>
			<footer class="section-footer publications__footer">
				<a href="" class="footer__link">Consulter toutes les publications  ></a>
			</footer>
		</div>
	</section>
	<section class="home-section rubriques">
		<div class="rubriques__container">
			<div class="rubriques__lines">
				<div class="line"></div>
				<div class="line"></div>
				<div class="line"></div>
				<div class="line"></div>
				<div class="line"></div>
			</div>
			<header class="section-header rubriques__header">
				<h2 class="header__title">Rubriques</h2>
				<a href="#" class="header__link">Découvrir toutes les rubriques  ></a>			
			</header>
			<ul class="rubriques__wrapper">
			{% for key,rubrique in rubriques %}
				<li class="rubriques__item">
					<button class="item__button {% if key == 0 %}desktop-active{% endif %}">{{rubrique[0].taxonomy}} <span>></span></button>
					<ul class="item__wrapper {% if key == 0 %}desktop-active{% endif %}">
						{% for item in rubrique[0:19] %}
						<li class="rubriques__subItem">
							<a href="#">{{item.name}}</a>
						</li>
						{% endfor %}
					</ul>
				</li>
			{% endfor %}
				<li class="item__grid">
					{% for index in 0..19 %}
						<div></div>
					{% endfor %}
				</li>
			</ul>
			<footer class="section-footer rubriques__footer">
				<a href="" class="footer__link">Découvrir toutes les rubriques  ></a>
			</footer>
		</div>
	</section>
  {# {{function('do_shortcode', '[custom-twitter-feeds]')}}	 #}
  {# <h2>Publications</h2>
	{% for post in posts %}
		{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
	{% endfor %}
  <h2>Projets</h2>  
	{% for post in projects %}
		{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
	{% endfor %}
  <h2>Events</h2>    
	{% for post in events %}
		{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
	{% endfor %}
